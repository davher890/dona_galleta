        .row
            table.table.table-striped
                thead
                    tr
                        th Nombre
                        th Precio
                        th

                tbody

                - for (var i=0; i<cart.length; i++) {
                    tr
                        td= cart[i].nombre
                        td= cart[i].precio
                        td: i.fa.fa-times(aria-hidden="true")
                - }

